{
  "name": "esbuild-react-tailwind",
  "version": "1.0.0",
  "main": "index.js",
  "author": "subject026",
  "license": "MIT",
  "scripts": {
    "dev:css": "tailwindcss -o dist/bundle.css --watch",
    "dev:js": "node scripts/dev.js",
    "dev": "concurrently 'yarn:dev:*'",
    "prod:js": "node scripts/build.js",
    "prod:css": "tailwindcss -o dist/bundle.css",
    "build": "concurrently 'yarn:prod:*'",
    "// dev": "esbuild src/app.tsx --bundle --watch --sourcemap --target=chrome58,firefox57,safari11,edge16",
    "// build": "esbuild src/app.tsx --bundle --outfile=dist/out.js"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.11",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.15",
    "chokidar": "^3.5.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "fs-extra": "^10.0.0",
    "live-server": "^1.2.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:react",
      "plugin:prettier"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true
    }
  }
}
